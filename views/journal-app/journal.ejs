<!DOCTYPE html>
<html>
<head>
  <title>My Journal</title>
</head>
<body>
  <h1>Welcome, <%= username %>!</h1>

  <!-- POST goes to the mounted route -->
  <form action="/journal/entry" method="POST">
    <textarea name="content" rows="4" cols="50" placeholder="Write your journal entry..." required></textarea>
    <br />
    <button type="submit">Save Entry</button>
  </form>

  <!-- Logout is in the journal router -->
  <a href="/journal/logout">Logout</a>

  <h2>Your Entries:</h2>
  <% entries.forEach(entry => { %>
    <div>
      <strong><%= entry.timestamp %>:</strong>
      <p><%= entry.content %></p>

      <!-- Edit page and delete action must include /journal -->
      <a href="/journal/edit/<%= entry.id %>">Edit</a>

      <form method="POST" action="/journal/entry/delete/<%= entry.id %>" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </div>
    <hr>
  <% }) %>
</body>
</html>


